{
  "name": "angular-achitecture-signals",
  "description": "This project represents a migration from a Component-First architecture (standalone) to a Signal-based Component Architecture, utilizing Angular CLI 19",
  "version": "1.0.0",
  "author": "AbdelAitaddi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AbdelAitaddi/angular-achitecture-signals/issues"
  },
  "homepage": "https://github.com/AbdelAitaddi/angular-achitecture-signals",
  "keywords": [
    "Angular-19",
    "Signals",
    "State-management",
    "standalone",
    "Deferrable Views",
    "Control Flow"
  ],
  "private": false,
  "engines": {
    "node": "^22.13.0",
    "npm": "^10.9.1"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng dev",
    "start:eslint": "ng serve --force-esbuild",
    "db": "json-server --watch db.json --delay 1000",
    "build": "NG_BUILD_LOGS_JSON=1 BUILD_OPTIMIZE_CHUNKS=1 ng build",
    "build:watch": "ng build --watch --configuration development",
    "start-server": "angular-http-server --cors --path ./dist/angular-achitecture-signals -p 4200",
    "package-lock-only": "npm install --package-lock-only",
    "lint": "ng lint",
    "format:fix": "pretty-quick",
    "prepare": "husky || true",
    "test": "ng test"
  },
  "dependencies": {
    "@angular/animations": "~19.0.6",
    "@angular/cdk": "~19.0.5",
    "@angular/common": "~19.0.6",
    "@angular/compiler": "~19.0.6",
    "@angular/core": "~19.0.6",
    "@angular/forms": "~19.0.6",
    "@angular/material": "~19.0.5",
    "@angular/platform-browser": "~19.0.6",
    "@angular/platform-browser-dynamic": "~19.0.6",
    "@angular/router": "~19.0.6",
    "@colsen1991/ngx-translate-extract-marker": "~3.0.1",
    "@ngx-translate/core": "~16.0.4",
    "@ngx-translate/http-loader": "~16.0.1",
    "@types/node": "~22.10.5",
    "express": "~4.21.2",
    "json-server": "~0.17.4",
    "lodash": "~4.17.21",
    "ngx-infinite-scroll": "~19.0.0",
    "normalize.css": "~8.0.1",
    "rxjs": "~7.8.1",
    "tslib": "~2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-extensions/pretty-html-log": "~5.1.1",
    "@angular/build": "~19.0.7",
    "@angular/cli": "~19.0.7",
    "@angular/compiler-cli": "~19.0.6",
    "@eslint/js": "~9.17.0",
    "@types/lodash": "~4.17.12",
    "angular-eslint": "~19.0.2",
    "angular-http-server": "~1.12.0",
    "eslint": "~9.17.0",
    "husky": "9.1.7",
    "prettier": "~3.4.2",
    "pretty-quick": "~4.0.0",
    "ts-node": "~10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "~8.19.1"
  }
}
